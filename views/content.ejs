<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <%- include ('menu.html') %>
   
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%=data.title%></h5>
        <% let post_date = new Date(data.date) %>
        <h6 class="card-subtitle mb-2 text-body-secondary">작성일 : <%=post_date.toLocaleDateString('kr') %></h6>
        <p class="card-text"><%=data.content%></p>
        <img src = "<%= data.path %>" width="200"/><p></p>
        <a href="/edit/<%= data._id %>" class="card-link">수정하기</a>
        <a href ='/postlist' class="card-link">목록</a>
      </div>

    </div>
  </body>
</html>